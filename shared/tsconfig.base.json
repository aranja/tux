{
  "compilerOptions": "// COMMENT - This file is just a template. gulp-typescript does not support extends.",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "jsx": "preserve",
    "lib": ["es2015", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es6"
  },
  "compileOnSave": false,
  "exclude": [
    "**/*.spec.{ts,tsx}"
  ],
  "include": [
    "./src"
  ]
}
