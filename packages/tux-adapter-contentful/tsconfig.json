{
  "extends": "../../shared/tsconfig.base.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "jsx": "preserve",
    "lib": ["dom", "es2015", "es2017"],
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es6"
  },
  "compileOnSave": false,
  "include": [
    "./src",
    "../../shared/types"
  ],
  "exclude": [
    "./**/*.spec.ts"
  ]
}
