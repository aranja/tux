{
    "defaultSeverity": "warning",
    "jsRules": {
        "class-name": true,
        "comment-format": {
            "options": [
                "check-space"
            ]
        },
        "no-duplicate-variable": true,
        "no-eval": true,
        "no-unsafe-finally": true,
        "triple-equals": {
            "options": [
                "allow-null-check"
            ]
        },
        "variable-name": {
            "options": [
                "ban-keywords"
            ]
        }
    },
    "rules": {
        "class-name": true,
        "comment-format": {
            "options": [
                "check-space"
            ]
        },
        "no-console": {
            "severity": "error",
            "options": [
                "log",
                "error"
            ]
        },
        "no-debugger": {
            "severity": "error"
        },
        "no-eval": {
            "severity": "error"
        },
        "no-internal-module": true,
        "no-invalid-this": true,
        "no-reference-import": true,
        "no-string-throw": true,
        "no-unsafe-finally": true,
        "no-var-keyword": true,
        "prefer-const": true,
        "triple-equals": {
            "options": [
                "allow-null-check"
            ]
        },
        "variable-name": {
            "options": [
                "ban-keywords"
            ]
        }
    }
}
