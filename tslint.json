{
    "defaultSeverity": "warning",
    "jsRules": {
        "class-name": true,
        "comment-format": {
            "options": [
                "check-space"
            ]
        },
        "indent": {
            "options": "spaces"
        },
        "no-duplicate-variable": true,
        "no-eval": true,
        "no-trailing-whitespace": true,
        "no-unsafe-finally": true,
        "one-line": {
            "options": [
                "check-open-brace",
                "check-whitespace"
            ]
        },
        "quotemark": {
            "options": [
                "single",
                "jsx-double"
            ]
        },
        "semicolon": {
            "options": [
                "never"
            ]
        },
        "triple-equals": {
            "options": [
                "allow-null-check"
            ]
        },
        "variable-name": {
            "options": [
                "ban-keywords"
            ]
        },
        "whitespace": {
            "options": [
                "check-branch",
                "check-decl",
                "check-operator",
                "check-module",
                "check-separator",
                "check-type",
                "check-typecast",
                "check-preblock"
            ]
        }
    },
    "rules": {
        "class-name": true,
        "comment-format": {
            "options": [
                "check-space"
            ]
        },
        "indent": {
            "options": "spaces"
        },
        "max-line-length": {
            "options": 100
        },
        "no-console": {
            "severity": "error",
            "options": [
                "log",
                "error"
            ]
        },
        "no-debugger": {
            "severity": "error"
        },
        "no-eval": {
            "severity": "error"
        },
        "no-internal-module": true,
        "no-invalid-this": true,
        "no-reference-import": true,
        "no-string-throw": true,
        "no-trailing-whitespace": true,
        "no-unsafe-finally": true,
        "no-var-keyword": true,
        "one-line": {
            "options": [
                "check-open-brace",
                "check-whitespace"
            ]
        },
        "prefer-const": true,
        "quotemark": {
            "options": [
                "single",
                "jsx-double"
            ]
        },
        "semicolon": {
            "options": [
                "never"
            ]
        },
        "triple-equals": {
            "options": [
                "allow-null-check"
            ]
        },
        "typedef-whitespace": {
            "options": [
                {
                    "call-signature": "nospace",
                    "index-signature": "nospace",
                    "parameter": "nospace",
                    "property-declaration": "nospace",
                    "variable-declaration": "nospace"
                }
            ]
        },
        "variable-name": {
            "options": [
                "ban-keywords"
            ]
        },
        "whitespace": {
            "options": [
                "check-branch",
                "check-decl",
                "check-operator",
                "check-module",
                "check-separator",
                "check-type",
                "check-typecast",
                "check-preblock"
            ]
        }
    }
}
